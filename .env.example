# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/justchiropractor
DB_HOST=localhost
DB_PORT=5432
DB_NAME=justchiropractor
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# Session & Authentication
SESSION_SECRET=your-super-secret-session-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Admin Credentials (for initial setup)
ADMIN_EMAIL=admin@justchiropractor.com
ADMIN_PASSWORD=change-this-password

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CSRF Protection
CSRF_SECRET=your-csrf-secret-key

# Site Configuration
SITE_NAME=Just Chiropractor
SITE_URL=https://justchiropractor.com
SITE_DESCRIPTION=Find trusted chiropractors across the USA

# Optional: Email Configuration (for password reset, notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@justchiropractor.com

# Optional: External API Keys
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# ANALYTICS_ID=your-analytics-id
